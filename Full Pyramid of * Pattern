#include <stdio.h>
int main() {
int i,j,k;
int rows=0;
printf("\n Enter number of rows:\n");
scanf("\n%d",&rows);
    for(i=1;i<=rows;i++)  //rows
    {
        for(j=rows;j>i;j--) // left-side space
        {
           printf(" "); 
        }
        for(k=1;k<=i;k++) //*,middle and right space
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
----------------------------------------------------------------------------------------------------------------------------------------------------------------------
Output:
Enter number of rows: 5
    * 
   * * 
  * * * 
 * * * * 
* * * * * 
