
#include <stdio.h>

int main() {
 int age;
 printf("Enter your age:");
 scanf("\n%d",&age);
 if(age>=18)
 {
     printf("\nYou are Eligible for voting");
 }
 else
 {
     printf("\n You are not eligible for vote");
 }
    return 0;
}

output:
----------------------------------------------------------------------------------------------------------------------------------------------------------------------
Enter your age:14
You are not eligible for vote
----------------------------------------------------------------------------------------------------------------------------------------------------------------------
--------------------------------------------------------------------------------------------------------------------------------------------------------------------
Enter your age:22
You are Eligible for voting
----------------------------------------------------------------------------------------------------------------------------------------------------------------------
