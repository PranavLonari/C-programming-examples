#include <stdio.h>

int main() {
 int number;
 printf("Enter number:");
 scanf("\n%d",&number);
 if(number %2 ==0)
 {
     printf("\n %d is a Even number",number);
 }
 else
 {
     printf("\n %d is odd number ",number);
 }
    return 0;
}

output:
----------------------------------------------------------------------------------------------------------------------------------------------------------------------
Enter number:4
4 is a Even number
----------------------------------------------------------------------------------------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------------------------------------------------------------------------------------
Enter number:9
9 is odd number 
----------------------------------------------------------------------------------------------------------------------------------------------------------------------
