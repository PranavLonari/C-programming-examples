// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    char c;
    
    printf("choose l for lowercase and U for uppercase");
    scanf("%c",&c);
    
if(c=='l' || c=='L')
    //printf("Hello world");
{    for(c='a';c<='z';c++)
    {
        printf("\t%c",c);
    }
}
//    printf("\n");
else if(c=='U' || c=='u')
 {
     for(c='A';c<='Z';c++)
    {
        printf("\t%c",c);
    }
 }
 
 else
 {
     printf("wrong letter eneterd");
 }
    return 0;
}
