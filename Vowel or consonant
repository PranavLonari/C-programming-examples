#include <stdio.h>
int main() {
    char c;
    int uppercase,lowercase;
    printf("\nEnter a character\n");
    scanf("%c",&c);
    
    uppercase=(c=='A'||c=='E'||c=='I'||c=='O'||c=='U');
    lowercase=(c=='a'||c=='e'||c=='i'||c=='o'||c=='u');
    
    if(!isalpha(c))
    {
    printf(" Error ! %c is not a Alphabetic character ",c);
    }
    else if(uppercase||lowercase)
    {
        printf("%c is vowel",c);
    }
    else
    {
        printf("%c is consonant",c);
    }
    return 0;
}
---------------------------------------------------------------------------------------------------------------------------------------------------------------------
Output:
---------------------------------------------------------------------------------------------------------------------------------------------------------------------
Enter a character
4
Error ! 4 is not a Alphabetic character 
---------------------------------------------------------------------------------------------------------------------------------------------------------------------
Enter a character
A
A is vowel
------------------------------------------------------------------------------------------------------------------------------------------------------------------
