#include <stdio.h>
int main() {
    char c;
    int uppercase,lowercase;
    printf("\nEnter a character\n");
    scanf("%c",&c);
    
    uppercase=(c=='A'||c=='E'||c=='I'||c=='O'||c=='U');
    lowercase=(c=='a'||c=='e'||c=='i'||c=='o'||c=='u');
  
    if(uppercase||lowercase)
    {
        printf("%c is vowel",c);
    }
    else
    {
        printf("%c is consonant",c);
    }
    return 0;
}
------------------------------------------------------------------------------------------------------------------------------------------------------------------
Output:
-----------------------------------------------------------------------------------------------------------------------------------------------------------------
Enter a character
A
A is vowel

-------------------------------------------------------------------------------------------------------------------------------------------------------------------
Enter a character
B
B is consonant
--------------------------------------------------------------------------------------------------------------------------------------------------------------------
